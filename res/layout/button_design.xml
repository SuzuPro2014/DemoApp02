<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical" 
    <!-- ボタンが押されていないときの定義 -->
    <item android:state_pressed="false">        
        <shape>
             <gradient
                android:startColor="#98daff" 
                android:endColor="#00b2ff"  
                android:angle="270" />
            
           
            <stroke
                android:width="1dp"
                android:color="#ff9999ff"  />
            <corners
                android:radius="200dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:height="30dp"
                android:width="30dp" />
        </shape>
       
 
    <ImageView>
        android:layout_width="fill_parent"  
              android:layout_height="fill_parent"
        android:id="@+id/image" 
	</ImageView>

    </item>
</selector>
